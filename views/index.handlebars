{{#if shortURL}}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-auto">
        <h1>Success! Please use this link:</h1>
        <h3 class="text-primary" id="newURL">{{url}}{{shortURL}}</h3>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto mt-3">
        <button class="btn btn-primary btn-lg" onclick="copy()">COPY</button>
      </div>
    </div>
  </div>
  
  <script>
    function copy() { 
      const newURL = document.getElementById("newURL").innerText
      navigator.clipboard.writeText(newURL) 
        .then(() => {alert("Copied !")})
        .catch(error => console.log("Something went wrong", error)) 
    }
  </script>


{{else}}
  <form action="/" method="POST">
    <div class="container">
      <div class="row justify-content-center">
        <input  class="form-control" type="url" name="url" placeholder="Input URL here" required />
        <div class="col-auto">
          <button class="mt-3 btn btn-outline-primary btn-lg" type="submit">Shorten</button>
        </div>
      </div>
    </div>
  </form>
</div>
{{/if}}